<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.web.tourseoul.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                                <Button
                                    android:id="@+id/korBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.07"
                                    android:background="@drawable/button"
                                    android:text="KOREAN"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    />
                                <Button
                                    android:id="@+id/engBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.07"
                                    android:background="@drawable/buttonc"
                                    android:text="English"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    />
                                <Button
                                    android:id="@+id/rusBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.07"
                                    android:background="@drawable/buttonc"
                                    android:text="russia"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                                  <Button
                                    android:id="@+id/nihonBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.07"
                                    android:background="@drawable/buttonc"
                                    android:textSize="20dp"
                                    android:text="nihon"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/ducBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.07"
                                    android:background="@drawable/buttonc"
                                    android:text="germany"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    />

                                <Button
                                    android:id="@+id/spaBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.07"
                                    android:background="@drawable/buttonc"
                                    android:text="spain"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    />
                        </LinearLayout>
                         <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                             android:layout_weight="1"
                             >
                                <Button
                                    android:id="@+id/fraBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.07"
                                    android:background="@drawable/buttonc"
                                    android:text="france"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/zzangBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.07"
                                    android:background="@drawable/buttonc"
                                    android:text="china 1"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/zzangBtn2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.07"
                                    android:background="@drawable/buttonb"
                                    android:text="china 2"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />
                         </LinearLayout>
                </LinearLayout>
</LinearLayout>
