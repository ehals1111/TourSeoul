<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.web.tourseoul.MainActivity"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:verticalScrollbarPosition="right"
        android:scrollbarThumbVertical="@color/colorAccent"
        android:scrollbarSize="20dp"
        tools:context="com.example.web.tourseoul.MainActivity"
        android:orientation="vertical"
        android:fillViewport="true"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:orientation="vertical" >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="3"
                >
                <Button
                    android:id="@+id/korBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="KOREAN"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:onClick="checkLanguage"
                    android:background="#ffc5c4"
                    />
                <Button
                    android:id="@+id/engBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="English"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:onClick="checkLanguage"
                    android:background="#cdf5ff"
                    />
                <Button
                    android:id="@+id/rusBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="russia"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:onClick="checkLanguage"
                    android:background="#ffe7b1"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="3">
                <Button
                    android:id="@+id/nihonBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="20dp"
                    android:text="Team chonriahn"
                    android:textStyle="bold"
                    android:onClick="checkLanguage"
                    android:background="#ffeec4"
                    />


                <Button
                    android:id="@+id/spaBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="spain"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:onClick="checkLanguage"
                    android:background="#ffade2"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="3"
                >
                <Button
                    android:id="@+id/fraBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="france"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:onClick="checkLanguage"
                    android:background="#d5ffc8"
                    />

                <Button
                    android:id="@+id/zzangBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="china 1"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:onClick="checkLanguage"
                    android:background="#d1c9ff"
                    />

                <Button
                    android:id="@+id/zzangBtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="china 2"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:onClick="checkLanguage"
                    android:background="#ecdfff"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <Button
                    android:id="@+id/ducBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="GERMANY"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:onClick="checkLanguage"
                    android:background="#fff0b2"
                    />

                <Button
                    android:id="@+id/test2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="ToUrSeoul app"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:onClick="checkLanguage"
                    android:background="#ffb2b2"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>